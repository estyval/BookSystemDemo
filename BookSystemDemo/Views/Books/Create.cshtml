@model BookSystemDemo.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h4>Add a new Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">               
                <label for="CustomerId" class="control-label">Author</label>
                <div>
                    @Html.DropDownListFor(m => m.AuthorId, new SelectList(ViewBag.Authors, "Id", "Fullname"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AuthorId)
                </div>
            </div>
            <div class="form-group">
                <label for="CustomerId" class="control-label">Category</label>
                <div>
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categories, "Id", "Name"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CategoryId)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Published" class="control-label"></label>
                <input asp-for="Published" class="form-control" />
                <span asp-validation-for="Published" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
